import Layout from '../layouts/BlogPost.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="jp">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		
		<!-- Google Search Console 用 -->
		<meta name="google-site-verification" content="TU4Wadhvi1Fe_QLVR_1KLuIM22PmFsS83om3AQ88eyg" />
	</head>
	<body>
		<Layout
			title="自己紹介"
			description="noRan3k0について"
			pubDate={new Date('June 2 2025')}
			heroImage="/noRan3k0.jpg"
		>
			<p>
				本名・経歴等、個人情報は就活サービスのプロフィール等からご確認お願いします。
			</p>

